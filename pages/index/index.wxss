/* pages/index.wxss */
.content {
  width: 100vw;
}

.img_box {
  position: absolute;
  top: 0;
  height: 100%;
}

.bottom_img {
  z-index: 10;
  width: 100%;
}

.top_img {
  z-index: 20;
  overflow: hidden;
  height: 100%;
  border-right: 1px dotted white;
}

.img {
  width: 100%;
  height: 100%;
}

.cursor_area {
  width: 100vw;
}

.cursor_box {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cursor {
  width: 80rpx;
  height: 80rpx;
}

.arrow {
  width: 48rpx;
  height: 48rpx;
}


.bottom_tab {
  width: 100vw;
  height: 120rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}





