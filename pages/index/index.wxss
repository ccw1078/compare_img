/* pages/index.wxss */
.content {
  width: 100vw;
}

.img_box {
  position: absolute;
  top: 0;
}

.top_img_box {
  overflow: hidden;
  border-right: 1px dotted white;
}

.img {
  width: 100%;
  height: 100%;
}

.cursor_area {
  width: 100vw;
  justify-content: center;
  align-items: center;
}

.cursor_box {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cursor {
  width: 72rpx;
  height: 72rpx;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

.zoom {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}


.bottom_tab {
  width: 100vw;
  height: 120rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.transparent {
  opacity: 0;
}





